<?xml version="1.0"?>
<odoo>
    <data>

        <record id="ng_hr_payroll.hr_hr_employee_view_form_leave" model="ir.ui.view">
            <field name="name">hr.hr.employee.view.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/notebook" position="inside">
                <!--page string="HR Settings" position="before"-->
                    <page string="History" groups="base.group_hr_user">
                        <group>
                            <field name="join_date" />
                            <field name="no_periods" on_change="onchange_no_periods(join_date, no_periods)" />
                            <field name="confirm_date" />
                            <field name="left_date" />
                            <field name="reason" colspan="4" />
                        </group>
                    </page>
                <!--/page-->
                    </xpath>
            </field>
        </record>

        <record id="view_guarantor_form" model="ir.ui.view">
            <field name="name">guarantor.form</field>
            <field name="model">guarantor</field>
            <field name="arch" type="xml">
                <form string="Guarantor">
                    <group>
                        <group>
                            <field name="name" />
                            <field name="gender" />
                            <field name="tel1" />
                            <field name="email" />
                            <field name="status" />
                        </group>
                        <group>
                            <field name="lname" />
                            <field name="marital" />
                            <field name="tel2" />
                            <field name="rel" />
                            <field name="employer" attrs="{'invisible':[('status','=','u')]}" />
                        </group>
                    </group>
                    <group colspan="4">
                        <field name="home" placeholder="Add home address..."/>
                        <field name="office" placeholder="Add office address..."/>
                        <field name="notes" placeholder="Add internal notes..."/>
                        <field name="state" />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_guarantor_tree" model="ir.ui.view">
            <field name="name">guarantor.tree</field>
            <field name="model">guarantor</field>
            <field name="arch" type="xml">
                <tree string="Guarantor">
                    <field name="name" />
                    <field name="lname" />
                    <field name="gender" />
                    <field name="marital" />
                    <field name="email" />
                    <field name="tel1" />
                    <field name="tel2" />
                    <field name="status" />
                    <field name="state" />
                    <field name="emp_id" invisible="1" />
                </tree>
            </field>
        </record>

        <record id="view_guarantor_search" model="ir.ui.view">
            <field name="name">guarantor.search</field>
            <field name="model">guarantor</field>
            <field name="arch" type="xml">
                <search string="Guarantor">
                    <field name="emp_id" invisible="0" />
                    <field name="name" />
                    <field name="lname" />
                    <field name="gender" />
                    <field name="marital" />
                    <field name="email" />
                    <field name="tel1" />
                    <field name="tel2" />
                    <field name="status" />
                    <field name="state" />
                    <group expand="0" string="Group By...">
                        <filter string="Employee" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'emp_id'}" />
                        <filter string="Marital" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'marital'}" />
                        <filter string="Gender" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'gender'}" />
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'status'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_gua" model="ir.actions.act_window">
            <field name="name">Guarantors</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">guarantor</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_gua" sequence="9" id="gua_menu" parent="hr.menu_human_resources_configuration" name="Employee Guarantors" />

        <record id="view_refs_form" model="ir.ui.view">
            <field name="name">refs.form</field>
            <field name="model">refs</field>
            <field name="arch" type="xml">
                <form string="References">
                    <header>
                        <button name="verify" string="Verify" type="object" states="not_verify" class="oe_highlight" groups="base.group_hr_user" />
                        <button name="notverify" string="Reset to Not Verify" type="object" states="verify" groups="base.group_hr_user" />
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="gender" />
                            <field name="tel1" />
                            <field name="email" />
                            <field name="user" />
                        </group>
                        <group>
                            <field name="lname" />
                            <field name="marital" />
                            <field name="tel2" />
                            <field name="rel" />
                            <field name="status" />
                        </group>
                    </group>
                    <group colspan="4">
                        <field name="employer" attrs="{'invisible':[('status','=','u')]}" />
                        <field name="home" placeholder="Add home address..." />
                        <field name="office" placeholder="Add office address..."/>
                        <field name="notes" placeholder="Add internal notes..." />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_refs_tree" model="ir.ui.view">
            <field name="name">refs.tree</field>
            <field name="model">refs</field>
            <field name="arch" type="xml">
                <tree string="References">
                    <field name="name" />
                    <field name="lname" />
                    <field name="gender" />
                    <field name="marital" />
                    <field name="email" />
                    <field name="tel1" />
                    <field name="tel2" />
                    <field name="status" />
                    <field name="state" />
                    <field name="emp_id" invisible="1" />
                </tree>
            </field>
        </record>

        <record id="view_refs_search" model="ir.ui.view">
            <field name="name">refs.search</field>
            <field name="model">refs</field>
            <field name="arch" type="xml">
                <search string="References">
                    <field name="emp_id" invisible="0" />
                    <field name="name" />
                    <field name="lname" />
                    <field name="gender" />
                    <field name="marital" />
                    <field name="email" />
                    <field name="tel1" />
                    <field name="tel2" />
                    <field name="status" />
                    <group expand="0" string="Group By...">
                        <filter string="Employee" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'emp_id'}" />
                        <filter string="Marital" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'marital'}" />
                        <filter string="Gender" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'gender'}" />
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'status'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_ref" model="ir.actions.act_window">
            <field name="name">Employee References</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">refs</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_ref" sequence="9" id="ref_menu" parent="hr.menu_human_resources_configuration" name="Employee References" />

        <record id="view_nextofkin_form" model="ir.ui.view">
            <field name="name">nextofkin.form</field>
            <field name="model">nextofkin</field>
            <field name="arch" type="xml">
                <form string="Next of kins">
                    <group>
                        <group>
                            <field name="name" />
                            <field name="gender" />
                            <field name="tel1" />
                            <field name="email" />
                            <field name="status" />
                        </group>
                        <group>
                            <field name="lname" />
                            <field name="marital" />
                            <field name="tel2" />
                            <field name="rel" />
                            <field name="employer" attrs="{'invisible':[('status','=','u')]}" />
                        </group>
                    </group>
                    <group colspan="4">
                        <field name="home" placeholder="Add home address..." />
                        <field name="office" placeholder="Add office address..." />
                        <field name="notes" placeholder="Add internal notes..." />
                    </group>
                </form>
            </field>
        </record>

        <record id="view_nextofkin_tree" model="ir.ui.view">
            <field name="name">nextofkin.tree</field>
            <field name="model">nextofkin</field>
            <field name="arch" type="xml">
                <tree string="Next of kins">
                    <field name="name" />
                    <field name="lname" />
                    <field name="gender" />
                    <field name="marital" />
                    <field name="email" />
                    <field name="tel1" />
                    <field name="tel2" />
                    <field name="status" />
                    <field name="emp_id" invisible="1" />
                </tree>
            </field>
        </record>

        <record id="view_nextofkin_search" model="ir.ui.view">
            <field name="name">nextofkin.search</field>
            <field name="model">nextofkin</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Next of kins">
                    <field name="emp_id" invisible="0" />
                    <field name="name" />
                    <field name="lname" />
                    <field name="gender" />
                    <field name="marital" />
                    <field name="email" />
                    <field name="tel1" />
                    <field name="tel2" />
                    <field name="status" />
                    <group expand="0" string="Group By...">
                        <filter string="Employee" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'emp_id'}" />
                        <filter string="Marital" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'marital'}" />
                        <filter string="Gender" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'gender'}" />
                        <filter string="Status" icon="terp-stock_effects-object-colorize" domain="[]" context="{'group_by':'status'}" />
                    </group>
                </search>
            </field>
        </record>

        <record id="action_kin" model="ir.actions.act_window">
            <field name="name">Next of kins</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">nextofkin</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem action="action_kin" sequence="9" id="kin_menu" parent="hr.menu_human_resources_configuration" name="Employee Next of kins" />

        <record id="employee_ref_gua_tabs" model="ir.ui.view">
            <field name="name">employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
                <data>
                    <!--page string="HR Settings" position="after"-->
                    <xpath expr="//form/sheet/notebook" position="inside">
                        <page string="References">
                            <group col="4" colspan="4">
                                <separator string="References" colspan="4" />
                                <field name="ref_ids" nolabel="1" colspan="4" context="{'default_customer':0, 'default_supplier': 0}" />
                            </group>
                        </page>
                        <page string="Guarantors">
                            <group col="4" colspan="4">
                                <separator string="Guarantors" colspan="4" />
                                <field name="gua_ids" nolabel="1" colspan="4" context="{'default_customer':0, 'default_supplier': 0}" />
                            </group>
                        </page>
                        <page string="Next of Kin">
                            <group col="4" colspan="4">
                                <separator string="Next of Kin" colspan="4" />
                                <field name="kin_ids" nolabel="1" colspan="4" context="{'default_customer':0, 'default_supplier': 0}" />
                            </group>
                        </page>
                    <!--/page-->
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="view_company_inherit_hr_reminder_confirm">
            <field name="name">res.company.form.birthday</field>
            <field name="inherit_id" ref="base.view_company_form" />
            <field name="model">res.company</field>
            <field name="arch" type="xml">
                <data>
                <xpath expr="//form/sheet/notebook" position="inside">
                    <!--page string="Configuration" position="after"-->
                        <page string="HR Confirmation Reminder">
                            <group col="4" colspan="4" name="test_te">
                                <field name="hr_remind_days_confirmation" />
                                <field name="email_template_id_confirmation" />
                            </group>
                        </page>
                    <!--/page-->
                    </xpath>
                </data>
            </field>
        </record>

    </data>
</odoo>

        <!-- Employee -->

        <record id="employee_qualification_form_inherit" model="ir.ui.view">
            <field name="name">hr.employee.form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form" />
            <field name="arch" type="xml">
<!--                <page string="HR Settings" position="before">-->
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="Academic Qualifications">
                        <group>
                            <separator string="Academic Qualifications" colspan="4" />
                            <field name="act_ids" nolabel="1" colspan="4">
                                <tree string="Academic Qualification">
                                    <field name="type_id" />
                                    <field name="school_id" />
                                    <field name="subject_ids" />
                                    <field name="date" />
                                    <field name="state" />
                                    <button name="verify" string="Verify" type="object" states="not_verify" groups="base.group_hr_user" />
                                </tree>
                            </field>
                            <separator string="Schools" colspan="4" />
                            <field name="school_ids" nolabel="1" colspan="4">
                                <tree string="Schools Attended">
                                    <field name="school_id" />
                                    <field name="start_date" />
                                    <field name="end_date" />
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Professional Qualifications">
                        <group>
                            <separator string="Professional Qualifications" colspan="4" />
                            <field name="prf_ids" widget="one2many_list" nolabel="1" colspan="4">
                                <tree string="Professional Qualification">
                                    <field name="type_id" />
                                    <field name="award_org" />
                                    <field name="date" />
                                    <field name="state" />
                                    <button name="verify" string="Verify" groups="base.group_hr_user" type="object" states="not_verify" icon="gtk-ok" />
                                </tree>
                            </field>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>


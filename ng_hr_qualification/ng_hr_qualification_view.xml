<?xml version="1.0"?>
<odoo>
    <data>

        <!-- HR Degree view -->

        <record id="view_hr_degree_filter" model="ir.ui.view">
            <field name="name">hr.recruitment.degree.list.select</field>
            <field name="model">hr.recruitment.degree</field>
            <field name="arch" type="xml">
                <search string="Search Degrees">
                    <group>
                        <field name="name" filter_domain="[('name','ilike',self)]" />
                        <field name="code" />
                    </group>
                </search>
            </field>
        </record>

        <record id="view_hr_degree_tree" model="ir.ui.view">
            <field name="name">hr.recruitment.degree.tree</field>
            <field name="model">hr.recruitment.degree</field>
            <field name="arch" type="xml">
                <tree string="Degrees">
                    <field name="name" />
                    <field name="code" />
                </tree>
            </field>
        </record>

        <record id="view_hr_degree_form" model="ir.ui.view">
            <field name="name">degree.form</field>
            <field name="model">hr.recruitment.degree</field>
            <field name="arch" type="xml">
                <form string="Degrees">
                    <group colspan="4">
                        <field name="name" filter_domain="[('name','ilike',self)]" />
                        <field name="code" />
                        <newline />
                        <field name="note" colspan="4" />
                    </group>
                </form>
            </field>
        </record>

        <record id="action_hr_degree" model="ir.actions.act_window">
            <field name="name">Degrees</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">hr.recruitment.degree</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_hr_degree_filter" />
        </record>


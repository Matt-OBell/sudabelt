<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="hr_leave_view_form_inherit" model="ir.ui.view">
        <field name="name">hr.leave.view.form.inherit</field>
        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form" />
<!--         <field name="priority">32</field> -->
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar" statusbar_visible="confirm,validate1,validate"/>
            </xpath>
            <xpath expr="//button[@name='action_approve']" position="replace">
<!--                 <button string="Approve (COO)"
                        name="action_approve"
                        type="object"
                        states="validate_coo"
                        class="oe_highlight" groups="ng_approvals.group_coo"/> -->
                <button string="Approve (COO)"
                        name="action_approve"
                        type="object"
                        class="oe_highlight"
                        groups="ng_approvals.group_coo"
                        attrs="{'invisible': ['|', ('can_approve', '=', False), ('state', '=', 'validate_coo')]}"/>
            </xpath>
            <xpath expr="//button[@name='action_approve']" position="after">
                <button string="Approve"
                        name="action_approve_coo"
                        type="object"
                        attrs="{'invisible': ['|', ('can_approve', '=', False), ('state', '=', 'confirm')]}"
                        class="oe_highlight"/>
            </xpath>
        </field>
    </record>

    <record id="hr_leave_action_action_approve_department" model="ir.actions.act_window">
        <field name="name">Time Off</field>
        <field name="res_model">hr.leave</field>
        <field name="view_mode">tree,kanban,form,calendar,activity</field>
        <field name="context">{
            'search_default_my_team_leaves':1,
            'search_default_approve':1}
        </field>
        <field name="domain">['|', '|', '&amp;', ('employee_id.leave_manager_id', '=', uid), ('holiday_status_id.validation_type', '=', 'manager'), '&amp;', ('holiday_status_id.responsible_id', '=', uid), ('holiday_status_id.validation_type', '=', 'hr'), '&amp;', '|', ('holiday_status_id.responsible_id', '=', uid), ('holiday_status_id.responsible_id', '=', uid), ('holiday_status_id.validation_type', 'in', ['both', 'triple'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new time off request
            </p>
        </field>
    </record>

</odoo>
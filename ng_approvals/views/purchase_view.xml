<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,internal_control,to approve,sent,purchase"
                       readonly="1"/>
            </xpath>

             <xpath expr="//button[@name='button_confirm'][1]" position="attributes">
                <attribute name="invisible">True</attribute>
            </xpath>

            <xpath expr="//button[@name='button_confirm'][2]" position="attributes">
                <attribute name="invisible">True</attribute>
                <attribute name="confirm">Are you sure you want to do this?</attribute>
            </xpath>

             <xpath expr="//button[@name='print_quotation']" position="after">
                   <button name="action_internal_control_approval"
                           states="draft,sent"
                           type="object"
                           string="Send for Approval" />
             </xpath>

            <xpath expr="//button[@name='button_approve']" position="attributes">
                <attribute name="groups">purchase.group_purchase_manager</attribute>
            </xpath>

            <xpath expr="//button[@name='button_approve']" position="after">
                   <button name="button_confirm"
                           states="internal_control"
                           type="object"
                           class="btn btn-primary"
                           string="Approve Order"
                           confirm="Are you sure you want to do this?"
                           groups="ng_approvals.group_internal_control" />

                    <button name="%(action_purchase_rejection)d"
                            states="internal_control,to approve"
                            type="action"
                            string="Reject"
                            groups="ng_approvals.group_internal_control,purchase.group_purchase_manager"/>
             </xpath>

<!--            <xpath expr="//button[@name='button_draft']" position="attributes">-->
<!--                <attribute name="states">rejected</attribute>-->
<!--             </xpath>-->


             <xpath expr="//button[@name='button_cancel']" position="replace">
                 <button name="button_cancel" attrs="{'invisible': ['|', ('state', 'not in', ['draft', 'sent', 'purchase']), ('is_record_owner', '=', False)]}" string="Cancel" type="object" />
<!--                <attribute name="attrs">{'invisible': ['|', ('state', 'not in', ['draft', 'sent', 'purchase']), ('is_record_owner', '=', False)]}</attribute>-->
<!--                  <button name="button_cancel" states="sent" string="Cancel" type="object" />-->
             </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ['purchase', 'done', 'cancel', 'internal_control', 'to approve', 'rejected'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='date_order']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ['purchase', 'done', 'cancel', 'internal_control', 'to approve', 'rejected'])]}</attribute>
            </xpath>
            <xpath expr="//field[@name='user_id']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ['purchase', 'done', 'cancel', 'internal_control', 'to approve', 'rejected'])]}</attribute>
            </xpath>
<!--            <xpath expr="//field[@name='payment_term_id']" position="attributes">-->
<!--                <attribute name="attrs">{'readonly': [('state', 'in', ['purchase', 'done', 'cancel', 'internal_control', 'to approve', 'rejected'])]}</attribute>-->
<!--            </xpath>-->
            <xpath expr="//notebook/page/field[@name='order_line']" position="attributes">
                <attribute name="attrs">{'readonly': [('state', 'in', ('done', 'cancel', 'internal_control', 'to approve', 'rejected'))]}</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="is_record_owner" invisible="1"/>
                <field name="rejected_by" attrs="{'invisible': [('reject_reason', '=', False)]}"/>
                <field name="reject_reason" attrs="{'invisible': [('reject_reason', '=', False)]}"/>
            </xpath>
            <xpath expr="//notebook/page[@name='purchase_delivery_invoice']/group/group[@name='other_info']/field[@name='company_id']" position="after">
                <field name="first_approve_by" attrs="{'invisible': [('first_approve_by', '=', False)]}"/>
                <field name="second_manager_approve_by" attrs="{'invisible': [('second_manager_approve_by', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record id="purchase_order_view_search_inherit_approval" model="ir.ui.view">
        <field name="name">purchase.order.select.approval</field>
        <field name="model">purchase.order</field>
        <field name="mode">primary</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='my_Orders']" position="replace">
                <filter string="My Approvals" name="my_approval" domain="[('is_my_approval', '=', True)]"/>
                <separator/>
            </xpath>
        </field>
    </record>

    <record id="action_purchase_approval" model="ir.actions.act_window">
        <field name="name">Purchase Order Approval</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order</field>
        <field name="view_mode">kanban,tree,calendar,pivot,form</field>
        <field name="search_view_id" ref="ng_approvals.purchase_order_view_search_inherit_approval"/>
        <field name="context">{'search_default_my_approval': 1}</field>
        <field name="domain">[('state', 'in', ('to approve', 'internal_control'))]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Create a quotation
            </p><p>
                It will be converted into a purchase order.
            </p>
        </field>
    </record>
    <menuitem action="action_purchase_approval"
            id="menu_purchase_approval" parent="purchase.menu_procurement_management"
            sequence="11" groups="ng_approvals.group_internal_control,purchase.group_purchase_manager"/>
</odoo>
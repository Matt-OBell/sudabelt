<odoo>

    <record id="view_account_move_form" model="ir.ui.view">
        <field name="name">account.move.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="replace">
                <field name="state" widget="statusbar"
                       statusbar_visible="draft,operation_manager,coo,finance_manager,posted"
                       readonly="1"/>
            </xpath>

             <xpath expr="//button[@name='action_post'][1]" position="attributes">
                <attribute name="invisible">True</attribute>
                 <attribute name="confirm">Are you sure you want to do this?</attribute>
            </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', 'not in', ['finance_manager'])]}</attribute>
                <attribute name="groups">account.group_account_manager</attribute>
            </xpath>

             <xpath expr="//button[@name='action_post']" position="after">
                   <button name="action_operation_manager_approval"
                           states="draft"
                           type="object"
                           string="Send for Approval" />
             </xpath>

            <xpath expr="//button[@name='action_post'][2]" position="after">
                   <button name="action_coo_approval"
                           states="operation_manager"
                           type="object"
                           string="Approve"
                           class="btn btn-primary"
                           confirm="Are you sure you want to do this?"
                           groups="ng_approvals.group_operation_manager"/>
                   <button name="action_financial_manager_approval"
                           states="coo"
                           type="object"
                           class="btn btn-primary"
                           confirm="Are you sure you want to do this?"
                           string="Approve" groups="ng_approvals.group_coo"/>
<!--                    <button name="action_post"-->
<!--                           states="finance_manager"-->
<!--                           type="object"-->
<!--                           class="btn btn-primary"-->
<!--                           string="Approve" />-->

                    <button name="%(action_billing_rejection)d"
                            states="operation_manager,coo,finance_manager"
                            type="action"
                            string="Reject" groups="ng_approvals.group_operation_manager,ng_approvals.group_coo"/>
            </xpath>

<!--            <xpath expr="//button[@name='button_draft']" position="attributes">-->
<!--                <attribute name="states">rejected</attribute>-->
<!--             </xpath>-->


<!--             <xpath expr="//button[@name='button_cancel']" position="replace">-->
<!--                &lt;!&ndash;<attribute name="states">''</attribute>&ndash;&gt;-->
<!--                  <button name="button_cancel" states="sent" string="Cancel" type="object" />-->
<!--             </xpath>-->
<!--            <xpath expr="//field[@name='payment_term_id']" position="attributes">-->
<!--                <attribute name="attrs">{'readonly': [('state', 'in', ['purchase', 'done', 'cancel', 'internal_control', 'to approve', 'rejected'])]}</attribute>-->
<!--            </xpath>-->
<!--            <xpath expr="//notebook/page/field[@name='invoice_line_ids']" position="attributes">-->
<!--                <attribute name="attrs">{'readonly': [('state', 'in', ('done', 'cancel', 'internal_control', 'to approve', 'rejected'))]}</attribute>-->
<!--            </xpath>-->
            <xpath expr="//field[@name='invoice_date']" position="attributes">
                <attribute name="required">True</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_bank_id']" position="after">
                <field name="rejected_by" attrs="{'invisible': [('reject_reason', '=', False)]}"/>
                <field name="reject_reason" attrs="{'invisible': [('reject_reason', '=', False)]}"/>
            </xpath>
        </field>
    </record>
</odoo>
<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_reject_order_form" model="ir.ui.view">
        <field name="name">reject.reason.form</field>
        <field name="model">reject.reason</field>
        <field name="arch" type="xml">
            <form string="Rejection Reason">
                <field name="name"/>
                <field name="type"/>
            </form>
        </field>
    </record>
    <record id="view_reject_order_tree" model="ir.ui.view">
        <field name="name">reject.reason.tree</field>
        <field name="model">reject.reason</field>
        <field name="arch" type="xml">
            <tree string="Rejection Reason" editable="top">
                <field name="name"/>
                <field name="type"/>
            </tree>
        </field>
    </record>
</odoo>
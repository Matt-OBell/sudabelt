<?xml version="1.0" encoding="utf-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="InventoryLines.Buttons">
        <button type="button" class='btn btn-primary o_button_to_approve_inventory' attrs="{'invisible': [('state', '!=', 'to approve')]}">
            Send for Approval
        </button>
        <button type="button" class='btn btn-primary o_button_approval_inventory' groups="ng_approvals.group_inventory_manager" states="to approve">
            Approve
        </button>
        <button type="button" class='btn btn-primary o_button_validate_inventory' states="confirm">
            Validate Inventory
        </button>
    </t>
</templates>
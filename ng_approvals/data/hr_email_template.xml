<odoo>

	<record id="hr_approval_template" model="mail.template">
		<field name="name" >Time-Off Approval</field>
		<field name="email_from">${object.company_id.email}</field>
		<field name="subject">Time-Off Approval request</field>
		<field name="email_to">${ctx.get('email_to')|safe}</field>
		<field name="model_id"   model="ir.model"  search="[('model', '=', 'hr.leave')]" />
		<field name="auto_delete" eval="True"/>
		<field name="body_html">
			<![CDATA[
			<p>Dear Sir/Ma,</p>
			<p>The request ${object.name} requires your approval. Kindly approve.</p>
			<p></p>
			<p>Thanks</p>
			<p>System auto generated email</p>
			]]>
		</field>
	</record>

</odoo>
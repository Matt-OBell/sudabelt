<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id='view_hr_payslip_wizard_form' model='ir.ui.view'>
        <field name="name">ng.hr.payslip.wizard.form</field>
        <field name="model">ng.hr.payslip.wizard</field>
        <field name="arch" type="xml">
            <form string="Payslip Reports">
                <group>
                    <field name="name" />
                    <field name="date_from" />
                    <field name="date_to" />
                    <field name="to_print_excel_format" />
                </group>

                <notebook colspan="4">
                    <page string="Salary Rules">
                        <group colspan="4">
                            <separator string="Salary Rules" colspan="4"/>
                            <field name="rules" nolabel="1"/>
                        </group>
                    </page>
                    <page string="Employees">
                        <group colspan="4">
                            <separator string="Employees" colspan="4"/>
                            <field name="employee_ids" nolabel="1"/>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button name="print_report" string="Submit" type="object" class="btn-primary"/>
                    <button special="cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_payroll_register_month" model="ir.actions.act_window">
        <field name="name">Payslip Reports</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ng.hr.payslip.wizard</field>
        <field name="view_id" ref="ng_hr_payroll_reports.view_hr_payslip_wizard_form"/>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem name="Payslip Reports" parent="hr_payroll.menu_hr_payroll_report"
              sequence="5" icon="STOCK_PRINT" action="action_payroll_register_month"
              id="menu_payroll_register_month" groups="hr.group_hr_user"/>

</odoo>
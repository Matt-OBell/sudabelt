<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="view_hr_payslip_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <div class="container-fluid">
                            <div class="row">
                                <div class="text-center">
                                    <h2>Payslip</h2>
                                </div>
                            </div>
                            <div class="row">
                                <table class="table table-borderless" name="invoice_line_table" style="color:#000">
                                    <thead class="border border-dark" style="background:#c7c7c7">
                                        <tr>
                                            <th name="th_rule" class="text-right"><span>Salary Rule</span></th>
                                            <th name="th_amount" class="text-right"><span>Amount</span></th>
                                            <th name="th_total" class="text-right"><span>Total</span></th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody border">

                                        <t t-set="current_amount" t-value="0"/>
                                        <t t-set="current_subtotal" t-value="0"/>
<!--                                        <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>-->
                                        <t t-foreach="o.employee_ids" t-as="employee_id">
                                            <tr>
                                                <td class="text-left border-bottom"><b><span t-esc="employee_id.name"/></b></td>
                                                <td class="border-bottom"></td>
                                                <td class="border-bottom"></td>
                                            </tr>
                                            <t t-foreach="get_salaries(o.rules, employee_id.id, o.date_from, o.date_to)" t-as="line">
                                                <tr>
                                                    <td class="text-right"><span t-esc="line['payslip_name']" /></td>
                                                    <td class="text-right"><span t-esc="line['amount']" /></td>
                                                    <td class="text-right"><span t-esc="line['total']" /></td>
                                                    <t t-set="current_subtotal" t-value="current_amount + line['amount']"/>
                                                    <t t-set="current_subtotal" t-value="current_subtotal + line['total']"/>
                                                </tr>
                                            </t>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
<?xml version="1.0"?>
<openerp>
    <data> 
         <record id='view_move_form' model='ir.ui.view'>
            <field name='name'>hr.employee.form</field>
            <field name='model'>hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name='arch' type='xml'>
                <xpath expr="//field[@name='coach_id']" position='after'>
                    <field name="administrator"/>
                    <field name="administrator_id"/>
                    <field name="health_management"/>
                    <field name="management_id"/>
                </xpath>
            </field>
         </record>

         <record id="health_tree" model="ir.ui.view">
             <field name="name">health.management.tree</field>
             <field name="model">health.management</field>
             <field name="arch" type="xml">
               <tree string="Health Management Organization">
                     <field name="name"/>
                     <field name="hmo_id"/>
              </tree>
             </field>
         </record>

         <record id="pension_tree" model="ir.ui.view">
             <field name="name">pension.fund.tree</field>
             <field name="model">pension.fund</field>
             <field name="arch" type="xml">
               <tree string="Pension Funds Administrator">
                     <field name="name"/>
                     <field name="pfd_id"/>
              </tree>
             </field>
         </record>

       <!--  Action  -->

         <record id="action_health" model="ir.actions.act_window">
            <field name="name">Health</field>
            <field name="type">ir.actions.act_window</field> 
            <field name="res_model">health.management</field>
            <field name="view_mode">tree,form</field>
         </record>

         <record id="action_pension" model="ir.actions.act_window">
            <field name="name">Pension</field>
            <field name="type">ir.actions.act_window</field> 
            <field name="res_model">pension.fund</field>
            <field name="view_mode">tree,form</field>   
         </record> 

 <!--   Menuitem -->

         <menuitem id="hmo"
            name="Health Management Organization"
            parent="hr.hr_menu_configuration"
            action="ng_hr_phmo.action_health"
            groups="base.group_system"/>

         <menuitem id="pfd"
            name="Pension Funds Administrator"
            parent="hr.hr_menu_configuration"
            action="ng_hr_phmo.action_pension"
            groups="base.group_system"/>
    </data>
</openerp>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_picking_in_form_landed_cost_boolean">
 			<field name="name">stock.picking.in.form.landed.cost</field>
 			<field name="model">stock.picking</field>
 			<field name="inherit_id" ref="stock.view_picking_form" />
 			<field name="arch" type="xml">
 				<field name="origin" position="after">
 					<field name="apply_cost" />
 				</field>

				<field name="picking_type_id" position="after">
 					<field name="picking_type" invisible="1"/>
 				</field>
 			</field>
 		</record>

		<record model="ir.ui.view" id="view_picking_in_form_landed_cost">
			<field name="name">stock.picking.landed.cost</field>
			<field name="model">stock.picking</field>
			<field name="inherit_id" ref="stock.view_picking_form" />
			<field name="arch" type="xml">
				<notebook position="inside">
					<page string="Landed Costs" attrs="{'invisible': ['|',('apply_cost','=',False),('picking_type', '=', 'Delivery Orders')]}">
						<group col="4" string="Landed Costs">
							<field name="landed_supplier" />
							<field name="land_account_id" />
							<field name="land_description" />
							<field name="land_amount" />
						</group>
						<group col="4" string="Transportation Costs">
							<field name="transport_supplier" />
							<field name="transport_account_id" />
							<field name="transport_description" />
							<field name="transport_amount" />
						</group>
						<group col="4" string="Other Costs">
							<field name="other_account_id" />
							<field name="other_description" />
							<field name="other_amount" />
							<field name="land_tran_other_journal_id" attrs="{'required': [('picking_type', '=', 'Receipts')]}"/>
						</group>
					</page>
				</notebook>

                <field name="partner_id" position="after">
                    <field name="currency_id"/>
                </field>

			</field>
		</record>

		<record model="ir.ui.view" id="stock_pack_form">
 			<field name="name">landed.stock.pack.operation</field>
 			<field name="model">stock.pack.operation</field>
 			<field name="inherit_id" ref="stock.view_pack_operation_details_form" />
 			<field name="arch" type="xml">
                <xpath expr="//form/group[@name='qty_to']" position="inside">
                    <group>
                        <field name="initial_price" />
 					    <field name="initial_qty" />
 					    <field name="current_price" />
                    </group>
                </xpath>
			</field>
 		</record>

    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_hr_reminder_birthday" model="mail.template">
            <field name="name">HR Birthday Reminder Template</field>
            <field name="email_from">${(user.email or '')}</field>
            <field name="subject">${user.company_id.name} Birthday Reminder</field>
            <field name="email_to">${object.hr_email}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

    <p>Hello HR Department</p>
    <p>

This is auto generated email by the system regarding reminder of birthday of employee ${object.name} on ${object.birthday}.

Thanks,
${user.name}
${user.company_id.name}
    </p>
<br/>
</div>

]]></field>
        </record>

        <record id="email_template_employee_wish_birthday" model="mail.template">
            <field name="name">HR Birthday Wish to Employee</field>
            <field name="email_from">${(user.email or '')}</field>
            <field name="subject">Birthday Wish from ${user.company_id.name}</field>
            <field name="email_to">${object.work_email}</field>
            <field name="lang">${object.lang}</field>
            <field name="model_id" ref="hr.model_hr_employee"/>
            <field name="auto_delete" eval="True"/>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: rgb(255, 255, 255); ">

    <p>Dear ${object.name}</p>
    <p>

Wishing you Many Many Returns of the Days!!..

Best Regards,
${user.company_id.name}
</p>
<br/>
</div>

]]></field>

        </record>

        <record forcecreate="True" id="ir_cron_birthday_action" model="ir.cron">
            <field name="name">Birthday Messages and Reminder</field>
            <field eval="True" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field eval="'hr.employee'" name="model"/>
            <field eval="'run_birthday'" name="function"/>
            <field eval="'()'" name="args"/>
        </record>

    </data>
</odoo>

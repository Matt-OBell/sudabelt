<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record model="ir.ui.view" id="view_company_inherit_hr_reminder">
            <field name="name">res.company.form.birthday</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="model">res.company</field>
            <field name="arch" type="xml">
            <data>
                <xpath expr="//form/sheet/notebook" position="inside">
                    <page string="HR Reminder">
                        <group col="4" colspan="4">
                            <field name="hr_remind_days" required="1" />
                              <field name="hr_email" placeholder="hr@yourcompany.com ..."/>
                              <field name="email_template_id"/>
                              <field name="emp_email_template_id"/>
                        </group>
                    </page>
                </xpath>
             </data>
            </field>
        </record>

    </data>
</odoo>

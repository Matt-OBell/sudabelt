<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="email_template_notify_inventory_manager_mail" model="mail.template">
        <field name="name">Expiration notification</field>
        <field name="subject">Expiration notification</field>
        <field name="model_id" ref="ng_expiry.model_stock_production_lot" />
        <field name="email_to">${ctx.get('emails')}</field>
        <field name="email_from">${user.company_id.email}</field>
        <field name="auto_delete" eval="True" />
        <field name="body_html">
            <![CDATA[
                <div style="font-family: Helvetica,arial,sans-serif">
                    <p>
                        Please be advised that the following products will expire within 6 months.<br />
                        <table class="table table-bordered">
                            <thead>
                                <th>Lot Number</th>
                                <th>Product Name</th>
                                <th>Expiration Date</th>
                                <th>Days</th>
                            </thead>
                            <tbody>
                            %for product in ctx.get('products'):
                                <tr>
                                <td>${product.lot}</td>
                                <td>${product.name}</td>
                                <td>${product.expiration_date}</td>
                                <td>${product.days}</td>
                                </tr>
                            %endfor
                            </tbody>
                        </table>
                    </p>
                </div>
                <div style="text-align:left;">
                    <p><em>Thank you</em></p>
                    <p></p>
                    <p>${user.company_id.name}</p>
                </div>
            ]]>
        </field>
    </record>
</odoo>